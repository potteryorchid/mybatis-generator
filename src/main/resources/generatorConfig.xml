<!DOCTYPE generatorConfiguration PUBLIC
  "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
  <!-- MyBatis3 / MyBatis3Simple / MyBatis3DynamicSql / MyBatis3Kotlin -->
  <context id="monitor-mysql" targetRuntime="MyBatis3">
    <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
      <property name="searchString" value="Example$"/>
      <property name="replaceString" value="Criteria"/>
    </plugin>

    <plugin type="com.org.mybatis.generator.api.ext.AddLombokForEntityPlugin">
      <property name="defaultSerialVersionUID" value="true"/>
      <property name="supperClass" value=""/>
    </plugin>

    <plugin type="com.org.mybatis.generator.api.ext.RenameMapperClassPlugin">
      <property name="oldSuffixStr" value="Mapper$"/>
      <property name="replaceSuffixStr" value="Dao"/>
    </plugin>

    <plugin type="com.org.mybatis.generator.api.ext.RenameXmlMapperFileNamePlugin">
      <property name="searchString" value="Mapper.xml$"/>
      <property name="replaceString" value="Dao.xml"/>
    </plugin>

    <!-- http://mybatis.org/generator/configreference/commentGenerator.html -->
    <commentGenerator type="com.org.mybatis.generator.api.ext.CustomCommentGenerator">
      <property name="suppressDate" value="false"/>
      <property name="dateFormat" value="yyyy-MM-dd HH:mm:ss"/>
      <property name="suppressAllComments" value="false"/>
      <property name="addRemarkComments" value="true"/>
    </commentGenerator>

    <!-- http://mybatis.org/generator/configreference/jdbcConnection.html -->
    <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
      connectionURL="jdbc:mysql://ip:3306/monitor?useUnicode=true&amp;characterEncoding=UTF-8&amp;useSSL=false"
      userId="user"
      password="pwd">
    </jdbcConnection>

    <!-- http://mybatis.org/generator/configreference/javaTypeResolver.html -->
    <javaTypeResolver>
      <property name="forceBigDecimals" value="false"/>
    </javaTypeResolver>

    <!-- http://mybatis.org/generator/configreference/javaModelGenerator.html -->
    <javaModelGenerator targetPackage="com.chinaunicom.modules.common.entity"
      targetProject="src/main/java">
      <property name="enableSubPackages" value="false"/>
      <property name="constructorBased" value="true"/>
      <property name="trimStrings" value="true"/>
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="mapper.common" targetProject="src/main/resources">
      <property name="enableSubPackages" value="false"/>
    </sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER" targetPackage="com.chinaunicom.modules.common.dao"
      targetProject="src/main/java">
      <property name="enableSubPackages" value="true"/>
    </javaClientGenerator>

    <table tableName="prom_dic"></table>


  </context>
</generatorConfiguration>